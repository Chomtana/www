<%inherit file="base.tmpl"/>

<%block name="content_post">
  <div id="fullpage">
    ${post.text()}
  </div>

  <script>
    new fullpage('#fullpage', {
      css3: true,
      scrollingSpeed: 1000,
      navigation: true,
      slidesNavigation: true,
      responsiveHeight: 330,
      fitToSection: true,
      paddingBottom: '4rem',
      scrollOverflow: true
    });
  </script>
</%block>